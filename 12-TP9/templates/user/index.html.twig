{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="text-center">User index</h1>

    <div class="text-center mt-5">
    <a href="{{ path('app_user_new') }}"><button class="btn btn-primary btn-lg mb-3">Ajouter nouveau</button></a>
    </div>

    <div class="d-flex justify-content-center"> 
        <table class="table table-warning border-dark table-striped align-middle w-75" >
        <thead>
            <tr>
                <th class="text-center col-2">Id</th>
                <th class="text-center col-2">Email</th>
                <th class="text-center col-2">Roles</th>
                <th class="text-center col-2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="text-center col-2">{{ user.id }}</td>
                <td class="text-center col-2">{{ user.email }}</td>
                <td class="text-center col-2">{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="text-center col-2">

                <div class="d-flex flex-row justify-content-center">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}"><button class="btn btn-secondary m-1 btn-sm">Voir</button></a>
                    {{ include('user/_delete_form.html.twig') }}
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}"><button class="btn btn-success m-1 btn-sm">Modifier</button></a>
                </div>
                    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
