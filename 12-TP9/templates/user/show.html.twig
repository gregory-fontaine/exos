{% extends 'base.html.twig' %}

{% block title %}
  Utilisateurs
{% endblock %}

{% block body %}
  <div class="d-flex justify-content-center text-center flex-column">
    <h1>Utilisateurs</h1>

    <table class="table d-flex justify-content-center text-center border-dark">
      <tbody>
        <tr>
          <th>Id</th>
          <td>{{ user.id }}</td>
        </tr>
        <tr>
          <th>Email</th>
          <td>{{ user.email }}</td>
        </tr>
        <tr>
          <th>Roles</th>
          <td>{{ user.roles ? user.roles|json_encode:'' }}</td>
        </tr>
      </tbody>
    </table>

    <a href="{{ path('app_user_edit', { id: user.id }) }}"><button class="btn m-1 btn-warning btn-sm">Modifier</button></a>
    <div>{{ include('user/_delete_form.html.twig') }}</div>
    <a href="{{ path('app_user_index') }}"><button class="btn btn-secondary m-1 btn-sm">Retour a la liste</button></a>
  </div>
{% endblock %}
